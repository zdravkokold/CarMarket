@using CarMarket.Web.Areas.Admin.Models
 @model MyCarsViewModel

@{
    ViewBag.Title = "My Cars";
}

<h2 class="text-center">@ViewBag.Title</h2>
<hr />

<h4>My Added Cars</h4>

@if (!Model.AddedCars.Any())
{
    <h2 class="text-center">You have no added cars yet!</h2>
}

<div class="row">
    @foreach (var car in Model.AddedCars)
    {
        @await Html.PartialAsync("~/Views/Shared/_CarPartial.cshtml", car)
    }
</div>

<hr />

<h4>My Bought Cars</h4>

@if (!Model.BoughtCars.Any())
{
    <h2 class="text-center">You have no bought cars yet!</h2>
}

<div class="row">
    @foreach (var car in Model.BoughtCars)
    {
        @await Html.PartialAsync("~/Views/Shared/_CarPartial.cshtml", car)
    }
</div>
