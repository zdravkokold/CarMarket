
@{
    ViewData["Title"] = "Administration dashboard";
}

<div class="mt-4 p-5 bg-light text-center">
    <h2 class="display-4">Hello, @User.Identity.Name.ToUpperInvariant()!</h2>
    <p class="lead mb-1 mt-3">
        This is your administrator dashboard - you can <b>search</b>,
        <b>delete</b>, <b>buy</b> and <b>sell</b> cars.
    </p>
    <p class="lead mt-1">
        You can also see <b>all users and dealers</b> in the system.
    </p>
    <hr class="my-4">
    <a asp-area="" asp-controller="Car" asp-action="All"
       class="btn btn-primary btn-lg">All Cars</a>
    <span>  |   </span>
    <a asp-area="Admin" asp-controller="Car" asp-action="Mine"
       class="btn btn-primary btn-lg">My Cars</a>
    <span>  |   </span>
    <a asp-area="Admin" asp-controller="Users" asp-action="ShowAllUsers"
       class="btn btn-primary btn-lg">All Users</a>
</div>
