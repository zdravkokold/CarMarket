@using CarMarket.Services.Models.Car
@model CarModel

<div class="col-md-4">
    <div class="card mb-3">
        <img class="card-img-top" src="@Model.ImageURL" alt="Car Image">
        <div class="card-body text-center">
            <h4>@Model.Make @Model.Model</h4>
            <h5>
                Price: <b>@Model.Price USD</b>
            </h5>
            <h6>Year Produced: <b>@Model.YearProduced</b></h6>
            <h6>Horsepower: <b>@Model.HorsePower</b></h6>
            <h6>Mileage: <b>@Model.Mileage</b></h6>
            <h6>Color: <b>@Model.Color</b></h6>
            
            <h6>(@(Model.IsBought ? "Bought" : "Not Bought"))</h6>
            <br />
            <a asp-area="" asp-controller="Car" asp-action="Details" asp-route-id="@Model.Id" class="btn btn-success">Details</a>
            @if (this.User.IsInRole("Admin"))
            {
                <a asp-area="" asp-controller="Car" asp-action="Edit" asp-route-id="@Model.Id"
               class="btn btn-warning">Edit</a>
                <a asp-area="" asp-controller="Car" asp-action="Delete" asp-route-id="@Model.Id"
               class="btn btn-danger">Delete</a>
                <p></p>
                @if (!Model.IsBought)
                {
                    <form class="input-group-sm" asp-area="" asp-controller="Car"
                  asp-action="Buy" asp-route-id="@Model.Id" method="post">
                        <input class="btn btn-primary" type="submit" value="Buy" />
                    </form>
                }
                else
                {
                    <form asp-area="" asp-controller="Car" asp-action="Sell"
                  asp-route-id="@Model.Id" method="post">
                        <input class="btn btn-primary" type="submit" value="Sell" />
                    </form>
                }
            }
        </div>
    </div>
</div>
